{
  "App": {
    // Строка подключения к основной базе сервиса (PostgreSql)
    "DbConnectionString": "User ID=postgres;Password=postgresmaster;Host=localhost;Port=5432;Database=library;Pooling=true;",
    // Данные для подключения распределенного кэша (Redis)
    "Redis": {
      "RedisCacheConnection": "localhost:6379",
      "RedisCachePrefix": "Library"
    },
    // Данные для подкючения хранилища файлов (MinIO)
    "Minio": {
      "MinioFileStorageConnection": ""
    },
    // Настройки кеша для книг
    "BooksCache": {
      "BooksListCacheOptions": {
        "Prefix": "books:list",
        "TtlMinutes": 10
      },
      "LibraryBooksCacheOptions": {
        "Prefix": "library:books",
        "TtlMinutes": 5
      },
      "BookDetailsCacheOptions": {
        "Prefix": "book:details",
        "TtlMinutes": 30
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
